  */
function bird_taxonomies_block_view($delta = '') {
  // This example is adapted from node.module.
  $block = array();

  switch ($delta) {
    case 'bird_orders':
      $block['subject'] = t('Bird Orders');
      $block['content'] = array(
        '#orders' => bird_taxonomies_bird_orders(), 
        '#theme' => 'bird_taxonomies_bird_orders',
      );
      break;
  }
  return $block;
}

